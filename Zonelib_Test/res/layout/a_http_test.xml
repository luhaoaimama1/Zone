<?xml version="1.0" encoding="utf-8"?>
<view.FlowLayout_Zone xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flowLayoutZone1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="handler测试" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#00ff00"
        android:gravity="center"
        android:text="client" />

    <Button
        android:id="@+id/client_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="Get" />

    <Button
        android:id="@+id/client_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="Post" />

    <Button
        android:id="@+id/client_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="上传文件" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#00ff00"
        android:gravity="center"
        android:text="Connection" />

    <Button
        android:id="@+id/con_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="Get" />

    <Button
        android:id="@+id/con_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="Post" />

    <Button
        android:id="@+id/con_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="Down" />

    <Button
        android:id="@+id/con_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="上传文件" />

    <Button
        android:id="@+id/con_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#ff0000"
        android:onClick="onClick"
        android:text="服务器端在测试一遍" />

</view.FlowLayout_Zone>