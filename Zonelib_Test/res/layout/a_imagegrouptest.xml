<?xml version="1.0" encoding="utf-8"?>
<view.FlowLayout_Zone xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flowLayoutZone1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="显示" />

    <Button
        android:id="@+id/hide"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="隐藏" />
    <Button
        android:id="@+id/gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Gone" />
    <Button
        android:id="@+id/invalidate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="invalidate" />
    <Button
        android:id="@+id/requestLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="requestLayout" />

    <EditText
        android:id="@+id/num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="第几张显示 还是隐藏  不能超过 4即0-3" />

    <view.ImageGroup_Zone
        android:background="#366327"
        android:id="@+id/imageGroup_zone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</view.FlowLayout_Zone>